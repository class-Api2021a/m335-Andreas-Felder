<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- This sets the background color of the TextView. You can adjust as needed. -->
        </shape>
    </item>

    <item
        android:left="-22dp"
        android:right="-22dp"
        android:top="-22dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@android:color/black"/> <!-- This sets the border color. You can adjust as needed. -->
        </shape>
    </item>

</layer-list>
