<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/calculator1"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="1"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/calculator4"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/calculator5"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="5"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/calculator9"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="9"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/calculator8"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="8"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/calculator7"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/calculator0"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="0"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/calculatorDot"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="."
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/calculatorDelete"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/calculator6"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="6"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/calculator2"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="2"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/calculator3"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:text="3"
            app:layout_column="2"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>