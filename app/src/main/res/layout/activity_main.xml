<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="475dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:padding="16dp"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/calculator1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculator2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculator3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/calculator4"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculator5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculator6"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_6"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/calculator7"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_7"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculator8"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_8"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculator9"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_9"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/calculator0"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/calculatorDot"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="@string/calculator_button_Dot"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/calculatorDelete"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="@dimen/calculatorButtonWidth"
            android:layout_height="@dimen/calculatorButtonHeight"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contextClickable="true"
            android:foreground="@mipmap/calculator_backspace_foreground"
            android:text="@string/empty_string"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/logoBackgroundImage"
            android:layout_width="869dp"
            android:layout_height="669dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="200dp"
            android:alpha="0.2"
            android:rotation="-50"
            app:srcCompat="@mipmap/logo_background" />

    </GridLayout>

    <ImageView
        android:id="@+id/topBackgroundImage"
        android:layout_width="1092dp"
        android:layout_height="729dp"
        android:layout_marginStart="-320dp"
        android:layout_marginTop="-200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/calculator_color_background" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"

        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintHeight_percent="0.33"
        android:background="@drawable/shadow_box"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/mainCurrencyInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="185dp"
            android:ems="10"
            android:hint="00.00"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/firstCurrencyOutput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="110dp"
            android:ems="10"
            android:hint="00.00"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mainCurrencyTag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="325dp"
            android:layout_marginBottom="200dp"
            android:text="@string/main_currency"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/firstCurrencyTag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="325dp"
            android:layout_marginBottom="110dp"
            android:text="@string/main_currency"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <Button
            android:id="@+id/moreCurrencyButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:foreground="@drawable/arrow"
            android:text="@string/empty_string"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/changeMainCurrencyButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="275dp"
            android:layout_marginBottom="190dp"
            android:text="@string/empty_string"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/changeFirstCurrencyButton"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="275dp"
            android:layout_marginBottom="100dp"
            android:text="@string/empty_string"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mainCurrencyInput"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/mainCurrencyArrowImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow" />

        <ImageView
            android:id="@+id/firstCurrencyArrowImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/firstCurrencyRateLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="80dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mainCurrencyRateLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="75dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="170dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mainCountryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="370dp"
            android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/firstCountryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="370dp"
            android:layout_marginBottom="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>